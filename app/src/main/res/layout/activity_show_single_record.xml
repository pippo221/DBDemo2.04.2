        android:textSize="15dp"
        android:layout_below="@+id/textView7_MonthlyCharge"
        android:layout_alignStart="@+id/textView7_MonthlyCharge"

        />
    <TextView
        android:text="Cost Show Here"
        android:layout_width="wrap_content"
