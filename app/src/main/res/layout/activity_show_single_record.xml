        android:layout_alignStart="@+id/textView8_Box"

        />
    <TextView
        android:text="Start Date Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10_StartedDate"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_below="@+id/textView9_Cost"
        android:layout_alignStart="@+id/textView9_Cost"

        />
    <TextView
        android:text="MAC Show Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11_MAC"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_below="@+id/textView10_StartedDate"
        android:layout_alignStart="@+id/textView10_StartedDate"

        />
    <TextView
        android:text="ExpiredDate Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12_ExpiredDate"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_below="@+id/textView11_MAC"
        android:layout_alignStart="@+id/textView11_MAC"

        />
    <TextView
        android:text="Contract Days Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13_ContractDays"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_below="@+id/textView12_ExpiredDate"
        android:layout_alignStart="@+id/textView12_ExpiredDate"

        />
    <TextView
        android:text="Message Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14_Message"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_below="@+id/textView13_ContractDays"
        android:layout_alignStart="@+id/textView13_ContractDays"

        />

    <TextView
        android:text="Phone Number Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3_PhoneNumber"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <Button
        android:text="Click Here To Edit This Record"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonEdit"
        android:layout_above="@+id/buttonDelete"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <Button
        android:text="Click Here to Lock/Unlock This Record"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDelete"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="33dp" />


