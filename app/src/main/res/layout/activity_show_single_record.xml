        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:id="@+id/textView14"
        android:textColor="#000000"
        android:textSize="15dp"/>

    <TextView
        android:text="Id Show Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1_ID"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:text="Name Show Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2_Name"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_above="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:text="Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3_Address"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />
    <TextView
        android:text="S.Type Show Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5_ServiceType"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_below="@+id/textView3_Address"
        android:layout_alignStart="@+id/textView3_Address" />

    <TextView
        android:text="Service Show Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
